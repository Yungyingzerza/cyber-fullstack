# =============================================================================
# Docker Compose Environment Variables
# =============================================================================
# Copy this file to .env and customize for your deployment
# Docker Compose automatically reads .env from the same directory

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE=cyber
DB_USER=cyber
DB_PASSWORD=cyberpassword
# Note: DB_HOST and DB_PORT are set in docker-compose.yml for container networking
# For local development outside Docker, set these in Backend/src/.env:
#   DB_HOST=localhost
#   DB_PORT=5432

# =============================================================================
# Authentication & Security
# =============================================================================
# IMPORTANT: Change this in production! Use a long random string (min 32 chars)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=24h

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# Syslog Server Configuration
# =============================================================================
SYSLOG_ENABLED=true
# Note: SYSLOG_PORT is set in docker-compose.yml (internal: 10514, external: 514)
# For local development outside Docker, set in Backend/src/.env:
#   SYSLOG_PORT=514
SYSLOG_TENANT=default

# =============================================================================
# Log Enrichment
# =============================================================================
ENRICHMENT_ENABLED=true
ENRICHMENT_DNS=true
ENRICHMENT_GEOIP=true

# =============================================================================
# Data Retention
# =============================================================================
RETENTION_ENABLED=true
RETENTION_DEFAULT_DAYS=30
RETENTION_INTERVAL_HOURS=24
RETENTION_MIN_DAYS=7

# =============================================================================
# Production Configuration (Optional)
# =============================================================================
# For production deployment with external nginx reverse proxy
# Set this to use docker-compose.prod.yml
# NGINX_NETWORK=nginxNetwork
# NGINX_CONTAINER_NAME=nginx
