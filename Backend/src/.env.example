# Server
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
DATABASE=cyber
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# JWT Authentication
JWT_SECRET=your-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info

# Syslog Server (optional)
SYSLOG_ENABLED=false
SYSLOG_PORT=514
SYSLOG_TENANT=default

# Enrichment (IP geolocation and reverse DNS)
ENRICHMENT_ENABLED=true
ENRICHMENT_DNS=true
ENRICHMENT_GEOIP=true

# Data Retention
RETENTION_ENABLED=true
RETENTION_DEFAULT_DAYS=30
RETENTION_INTERVAL_HOURS=24
RETENTION_RUN_ON_STARTUP=false
RETENTION_ALERT_DAYS=90
